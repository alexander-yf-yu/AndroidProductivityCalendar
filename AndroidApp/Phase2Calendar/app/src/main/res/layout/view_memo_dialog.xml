<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="16dp">

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
          android:textSize="@dimen/font_size_large" android:textStyle="bold"
          android:layout_centerHorizontal="true" android:id="@+id/title_view" android:layout_margin="16dp"/>

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:layout_below="@id/title_view" android:id="@+id/description_view"
              android:layout_centerHorizontal="true"/>

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:layout_below="@id/description_view" android:id="@+id/tip_view"
              android:text="@string/memo_view_tip" android:layout_marginTop="75dp"
              android:layout_centerHorizontal="true"/>

</RelativeLayout>