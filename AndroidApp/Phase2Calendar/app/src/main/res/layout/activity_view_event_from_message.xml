<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ViewEventFromMessageActivity">

    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_margin="16dp" android:id="@+id/sender_view"/>

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:layout_centerHorizontal="true"
              android:layout_marginBottom="8dp"
              android:layout_below="@+id/sender_view"
              android:textStyle="bold"
              android:textSize="@dimen/font_size_medium"
              android:id="@+id/title_view"/>

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:layout_centerHorizontal="true"
              android:layout_below="@id/title_view"
              android:id="@+id/start_view"/>

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:layout_centerHorizontal="true"
              android:layout_below="@+id/start_view"
              android:id="@+id/end_view"/>

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:layout_margin="16dp"
              android:layout_below="@id/end_view" android:id="@+id/description_view"/>

    <Button android:layout_width="match_parent" android:layout_height="wrap_content"
            android:layout_alignParentBottom="true" android:layout_centerHorizontal="true"
            android:layout_margin="32dp" android:id="@+id/join_button" android:text="@string/addEvent"
            android:onClick="chooseCalendar"/>

</RelativeLayout>