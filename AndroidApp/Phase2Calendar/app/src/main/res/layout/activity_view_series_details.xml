<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ViewSeriesDetailsActivity" android:padding="16dp">

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:layout_centerHorizontal="true"
              android:text="The Weeknd After Hours Concert" android:layout_marginBottom="8dp"
              android:textStyle="bold"
              android:textSize="@dimen/font_size_medium"
              android:id="@+id/title_view"/>

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:layout_margin="16dp" android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat."
              android:layout_below="@id/title_view" android:id="@+id/description_view"/>

    <Button android:layout_width="match_parent" android:layout_height="wrap_content"
            android:layout_above="@+id/view_events_button" android:layout_centerHorizontal="true"
            android:id="@+id/add_event_button" android:text="@string/add_an_event" android:onClick="openAddEvent"/>

    <Button android:layout_width="match_parent" android:layout_height="wrap_content"
            android:layout_centerHorizontal="true" android:layout_alignParentBottom="true"
            android:id="@+id/view_events_button" android:text="@string/view_events" android:onClick="openViewEvents"/>

</RelativeLayout>